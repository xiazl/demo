<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fly.caipiao.analysis.mapper.LogImportRecordMapper">
   <resultMap id="BaseResultMap" type="com.fly.caipiao.analysis.entity.LogImportRecord" >
       <id column="id" property="id" />
       <result column="name" property="name"/>
       <result column="size" property="size"/>
       <result column="key" property="key"/>
       <result column="create_time" property="createTime"/>
   </resultMap>

    <insert id="insert">
        insert into log_import_record (`name`,`size`,`key`)
        values (#{name},#{size},#{key})
    </insert>

    <select id="list" resultType="com.fly.caipiao.analysis.entity.LogImportRecord">
        select id,`name`,`size`,create_time
        from `log_import_record` where 1 = 1
        <if test="sSearch!=null and sSearch.length() > 0" >
            and `name` like concat('%',#{sSearch},'%')
        </if>
    </select>

    <select id="queryByNameKey" resultType="java.lang.Integer">
        select count(1) from log_import_record where `key` = #{key}
    </select>

    <select id="listNameKeys" resultType="java.lang.String">
        select `key` from log_import_record where `key` in
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item.key}
        </foreach>
    </select>

</mapper>
